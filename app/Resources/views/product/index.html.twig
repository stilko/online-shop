{% extends 'base.html.twig' %}

{% block body %}
    {#<h1>Products list</h1>#}

    <!-- Page Content -->
    <div class="container">

    <div class="row">

    <div class="col-md-3">
    <p class="lead">Shop Name</p>
    <div class="list-group">
        {% for category in categories %}
    <a href="{{ path('category_list', {'category': category.id }) }}" class="list-group-item">{{ category.name }}</a>
   {% endfor %}
    </div>
    </div>
    <br><br><br>
    <div class="col-md-9">

    <div class="row carousel-holder">

    <div class="col-md-12">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    {#<li data-target="#carousel-example-generic" data-slide-to="1"></li>#}
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
    <div class="item active">

    <img class="slide-image" src="{{ asset('images/project/images.jpg') }}" width="800px" height="300px" alt="">
    </div>
    {#<div class="item">#}
        {#<img class="slide-image" src="{{ asset('images/project/4.jpg') }}" width="850" height="300px" alt="">#}
    {#</div>#}
    <div class="item">
        <img class="slide-image" src="{{ asset('images/project/3.jpg') }}" width="395" height="300px" alt="">
    </div>
    </div>
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
    </div>
    </div>

    </div>


        {%  for product in pagination %}
        <a href="{{ path('product_show', { 'id': product.id } ) }}" >
        {#<div class="row">#}
        <div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="/images/project/{{ product.image }}" width="320" height="150" alt="">
    <div class="caption">
        {% if product.price | number_format(2) !=  calc.calculate(product.price) | number_format(2) %}
        <h5 class="pull-right"> <strike>{{ product.price }}лв.</strike></h5><br>
    <h3 class="pull-right">{{ calc.calculate(product.price) | number_format(2) }}лв.</h3>

{% else %}
        <h3 class="pull-right">{{ product.price | number_format(2) }}лв.</h3>
{% endif %}
        <h4> <a href="{{ path('product_show', { 'id': product.id } ) }}" > {{ product.name }}</a>
    </h4>

    <p>{{ product.description }}</p>
    </div>
        categoriq:  {{ product.category }}
    </div>
    </div>

        </a>
            {% endfor %}


    <div class="container">

    <hr>

    <!-- Footer -->

    </div>
        {{ promotion }}
        {{ knp_pagination_render(pagination) }}

    </div>
    </div>
    </div>

{% endblock %}
